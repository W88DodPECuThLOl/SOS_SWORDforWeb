;
; S-OS PAUSE TEST
;
	org $3000

MPRINT	EQU	$1FE2
PRTHL	EQU $1FBE
LTNL	EQU $1FEE
PAUSE	EQU	$1FC7

	CALL MPRINT
	DB "S-OS PAUSE TEST"
	DB 13, 0
LOOP:
	LD HL,(COUNT)
	INC HL
	LD (COUNT),HL
	CALL PRTHL
	CALL LTNL

	; PAUSE TEST
	CALL PAUSE
	DW BRKJOB
	JP LOOP
BRKJOB:

	CALL MPRINT
	DB "EXIT"
	DB 13, 0
    OR A ; CYをクリアして終了する
	RET
COUNT:
	DW 0
